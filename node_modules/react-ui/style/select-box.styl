.react-ui-select-box {
    position: relative;
    width: 100%;

    .react-ui-select-box-inner {
        border: 1px solid #cdcdcd;
        border-radius: 4px;
        box-sizing: border-box;
        height: 30px;
        width: 100%;
    }
}

.react-ui-select-box-value {
    left: 10px;
    position: relative;
    top: 5px;

    &.react-ui-select-box-placeholder {
        color: #cdcdcd;
    }
}

.react-ui-select-box-controls {
    position: absolute;
    right: 10px;
    top: 5px;
}

.react-ui-select-box-clear {
    &:after {
        color: #cdcdcd;
        content: '\2715';
        display: inline-block;
        font-size: 10px;
        margin-right: 4px;
    }
}

.react-ui-select-box-trigger {
    &:after {
        color: #cdcdcd;
        content: '\25bc';
        display: inline-block;
        font-size: 10px;
    }
}

.react-ui-select-box-open {

    .react-ui-select-box-inner {
        border-bottom-width: 0;
        border-radius: 4px 4px 0 0;
    }

    .react-ui-select-box-trigger {
        &:after {
            content: '\25b2';
        }
    }
}

.react-ui-select-box-search {
    box-sizing: border-box;
    padding: 0 10px;
    width: 100%;

    input[type='text'] {
        box-sizing: border-box;
        padding: 2px 6px;
        width: 100%;
    }
}

.react-ui-select-box-drop-down {
    background-color: #fff;
    border: 1px solid #cdcdcd;
    border-radius: 0 0 4px 4px;
    border-top-width: 0;
    box-sizing: border-box;
    margin-bottom: 10px;
    position: absolute;
    top: 28px;
    width: 100%;
}

.react-ui-select-box-option {
    cursor: pointer;
    padding: 4px 10px;

    &:hover {
        background-color: #cdcdcd;
        color: #fff;
    }
}

.react-ui-select-box-option-highlighted {
    background-color: #cdcdcd;
    color: #fff;
}

.react-ui-select-box-option-selected {
    background-color: #ededed;

    &.react-ui-select-box-option-highlighted {
        background-color: #cdcdcd;
    }
}
