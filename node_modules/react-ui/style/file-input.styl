.react-ui-file-input {
    width: 100%;
}

.react-ui-file-input-input {
    border: 1px solid #cdcdcd;
    border-radius: 4px;
    box-sizing: border-box;
    font-size: 13px;
    outline: none;
    padding: 8px 16px;
    position: relative;
}

.react-ui-file-input-choose {
    background-color: #fff;
    border: 1px solid #cdcdcd;
    border-radius: 4px;
    box-sizing: border-box;
    font-size: 13px;
    margin-right: 10px;
    padding: 8px 16px;
}

.react-ui-file-input-clear {
    background-color: #fff;
    border: 1px solid #cdcdcd;
    border-radius: 4px;
    box-sizing: border-box;
    font-size: 13px;
    margin-right: 10px;
    padding: 8px 16px;
}
