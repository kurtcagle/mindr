.react-ui-date-picker {
    position: relative;
    width: 100%;

    .react-ui-date-picker-inner {
        border: 1px solid #cdcdcd;
        border-radius: 4px;
        box-sizing: border-box;
        height: 30px;
        width: 100%;
    }
}

.react-ui-date-picker-value {
    left: 10px;
    position: relative;
    top: 5px;

    &.react-ui-date-picker-placeholder {
        color: #cdcdcd;
    }
}

.react-ui-date-picker-controls {
    position: absolute;
    right: 10px;
    top: 5px;
}

.react-ui-date-picker-clear {
    &:after {
        color: #cdcdcd;
        content: '\2715';
        display: inline-block;
        font-size: 10px;
        margin-right: 4px;
    }
}

.react-ui-date-picker-trigger {
    &:after {
        color: #cdcdcd;
        content: '\25bc';
        display: inline-block;
        font-size: 10px;
    }
}

.react-ui-date-picker-open {
    .react-ui-date-picker-inner {
        border-bottom-width: 0;
        border-radius: 4px 4px 0 0;
    }

    .react-ui-date-picker-trigger {
        &:after {
            content: '\25b2';
        }
    }
}

.react-ui-date-picker-calendar {
    background-color: #fff;
    border: 1px solid #cdcdcd;
    border-radius: 0 0 4px 4px;
    border-top-width: 0;
    font-size: 12px;
    position: absolute;
    table-layout: fixed;
    top: 30px;
    width: 100%;
    z-index: 999;

    td {
        height: 30px;
        text-align: center;
        user-select: none;
    }
}

.react-ui-date-picker-calendar-header {
    td {
        border: 1px solid #cdcdcd;
        border-width: 1px 0;

        &:first-child {
            text-align: left;
        }

        &:last-child {
            text-align: right;
        }
    }
}

.react-ui-date-picker-calendar-month-selector {
    margin-right: 10px;
}

.react-ui-date-picker-calendar-day {
    color: #cdcdcd;
    border: 1px solid #cdcdcd;
    border-width: 1px 0 0 1px;
    cursor: pointer;

    &:first-child {
        border-left-width: 0;
    }

    &:hover {
        background-color: #66aacc;
        color: #fff;
    }
}

.react-ui-date-picker-calendar-disabled-day {
    background: #efefef;
    cursor: not-allowed;

    &:hover {
        background-color: #efefef;
        color: #cdcdcd;
    }
}

.react-ui-date-picker-calendar-selected-month {
    color: #000;

    &.react-ui-date-picker-calendar-disabled-day {
        color: #000;

        &:hover {
            color: #000;
        }
    }
}

.react-ui-date-picker-calendar-current-day {
    color: #cc9977;
}

.react-ui-date-picker-calendar-selected-day {
    background-color: #66aacc;
    color: #fff;
}

.react-ui-date-picker-calendar-header-next {
    &:after {
        color: #adadad;
        content: '\25ba';
        cursor: pointer;
        font-size: 14px;
        margin-right: 6px;
    }
}

.react-ui-date-picker-calendar-header-previous {
    &:after {
        color: #adadad;
        content: '\25c4';
        cursor: pointer;
        font-size: 14px;
        margin-left: 6px;
    }
}

