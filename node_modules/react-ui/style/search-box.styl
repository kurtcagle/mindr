.react-ui-search-box {
    position: relative;

    input[type='text'] {
        border: 1px solid #cdcdcd;
        border-radius: 4px;
        box-sizing: border-box;
        font-size: 13px;
        outline: none;
        padding: 8px 16px;
        position: relative;
        width: 100%;
    }
}

.react-ui-search-box-drop-down {
    background: #fff;
    border: 1px solid #cdcdcd;
    border-radius: 4px;
    box-sizing: border-box;
    margin-top: 2px;
    position: absolute;
    width: 100%;
}

.react-ui-search-box-result {
    cursor: pointer;
    padding: 4px 10px;

    &:hover {
        background-color: #cdcdcd;
        color: #fff;
    }
}

.react-ui-search-box-result-selected {
    background-color: #ededed;
}
